@model RestaurantWeb.Models.ViewModels.KategoriEditVm

<form id="kategoriEditForm" method="post" action="@Url.Action("EditModal", "Kategoriler")">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div id="kategoriEditError" class="alert alert-danger d-none"></div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Vazgeç</button>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
