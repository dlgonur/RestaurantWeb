@model List<RestaurantWeb.Models.Personel>
@using System.Linq

<h2>Personeller</h2>

@{
    var aktif = (string)(ViewBag.Aktif ?? "all");
    var qAd = (string)(ViewBag.QAd ?? "");
    var qUser = (string)(ViewBag.QUser ?? "");
}

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-12 col-md-3">
        <label class="form-label">Aktiflik</label>
        <select id="aktifSelect" name="aktif" class="form-select">
            <option value="all">Hepsi</option>
            <option value="1">Sadece Aktif</option>
            <option value="0">Sadece Pasif</option>
        </select>

        <script>
            document.addEventListener("DOMContentLoaded", function () {
              const val = "@aktif";
              const sel = document.getElementById("aktifSelect");
              if (sel) sel.value = val || "all";
            });
        </script>
    </div>

    <div class="col-12 col-md-4">
        <label class="form-label">İsme göre ara</label>
        <input name="qAd" class="form-control" value="@qAd" placeholder="Ad Soyad..." />
    </div>

    <div class="col-12 col-md-4">
        <label class="form-label">Kullanıcı adına göre ara</label>
        <input name="qUser" class="form-control" value="@qUser" placeholder="kullanici_adi..." />
    </div>

    <div class="col-12 col-md-1 d-grid">
        <button class="btn btn-primary" type="submit">Ara</button>
    </div>

    <div class="col-12">
        <a class="btn btn-outline-secondary btn-sm"
           asp-action="Index"
           asp-route-aktif="all"
           asp-route-qAd=""
           asp-route-qUser="">
            Filtreleri Temizle
        </a>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Personel</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Rol</th>
            <th>Aktif</th>
            <th>Oluşturma Tarihi</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center text-muted">
                    Henüz personel kaydı bulunmuyor.
                </td>
            </tr>
        }
        else
        {
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.AdSoyad</td>
                    <td>@p.KullaniciAdi</td>
                    <td>@p.Rol</td>
                    <td class="personel-aktif-text">@(p.AktifMi ? "Evet" : "Hayır")</td>
                    <td>@p.OlusturmaTarihi.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning btn-personel-edit"
                                data-id="@p.Id"
                                data-name="@p.KullaniciAdi">
                            Düzenle
                        </button>

                        <form asp-action="ToggleAktif"
                              method="post"
                              style="display:inline"
                              class="personel-toggle-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.Id" />
                            <button type="submit"
                                    class="btn btn-sm personel-toggle-btn @(p.AktifMi ? "btn-secondary" : "btn-success")">
                                @(p.AktifMi ? "Pasif Yap" : "Aktif Yap")
                            </button>
                        </form>

                        <button type="button"
                                class="btn btn-sm btn-danger btn-personel-pass"
                                data-id="@p.Id"
                                data-name="@p.KullaniciAdi">
                            Şifre Değiştir
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="personelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="personelModalTitle">İşlem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="personelModalBody">
                <div class="text-muted">Yükleniyor...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const modalEl = document.getElementById("personelModal");
            const modalBody = document.getElementById("personelModalBody");
            const modalTitle = document.getElementById("personelModalTitle");
            const bsModal = new bootstrap.Modal(modalEl);

            async function loadPartial(url, titleText) {
                modalTitle.textContent = titleText || "İşlem";
                modalBody.innerHTML = '<div class="text-muted">Yükleniyor...</div>';
                bsModal.show();

                const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
                const html = await res.text();

                if (!res.ok) {
                    modalBody.innerHTML = `<div class="alert alert-danger">${html}</div>`;
                    return;
                }

                modalBody.innerHTML = html;
                wireForms();
            }

            function wireForms() {
                // EDIT
                const editForm = document.getElementById("personelEditForm");
                if (editForm && editForm.dataset.bound !== "1") {
                    editForm.dataset.bound = "1";

                    const hidden = editForm.querySelector('input[name="RolMask"]');
                    const cbs = editForm.querySelectorAll('.role-cb');

                    function recalcMask() {
                        if (!hidden) return;
                        let mask = 0;
                        cbs.forEach(cb => { if (cb.checked) mask |= parseInt(cb.value, 10); });
                        hidden.value = mask;
                    }
                    cbs.forEach(cb => cb.addEventListener('change', recalcMask));
                    recalcMask();

                    editForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("personelEditError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(editForm);
                        const res = await fetch(editForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) window.location.reload();
                    });
                }

                // PASSWORD
                const passForm = document.getElementById("personelPasswordForm");
                if (passForm && passForm.dataset.bound !== "1") {
                    passForm.dataset.bound = "1";

                    passForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("personelPasswordError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(passForm);
                        const res = await fetch(passForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) window.location.reload();
                    });
                }
            }

            // ★ ToggleAktif (AJAX) - sayfa yenilemeden
            document.addEventListener("submit", async function (e) {
                const form = e.target.closest(".personel-toggle-form");
                if (!form) return;

                e.preventDefault();

                const row = form.closest("tr");
                const aktifCell = row?.querySelector(".personel-aktif-text");
                const btn = form.querySelector(".personel-toggle-btn");

                const formData = new FormData(form);

                const res = await fetch(form.action, {
                    method: "POST",
                    body: formData,
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });

                if (!res.ok) {
                    const text = await res.text();
                    alert(text);
                    return;
                }

                const json = await res.json();
                if (!json || !json.success) {
                    alert(json?.message || "İşlem başarısız.");
                    return;
                }

                const newAktif = !!json.aktifMi;

                if (aktifCell) aktifCell.textContent = newAktif ? "Evet" : "Hayır";

                if (btn) {
                    btn.textContent = newAktif ? "Pasif Yap" : "Aktif Yap";
                    btn.classList.remove("btn-secondary", "btn-success");
                    btn.classList.add(newAktif ? "btn-secondary" : "btn-success");
                }
            });

            document.addEventListener("click", function (e) {
                const editBtn = e.target.closest(".btn-personel-edit");
                if (editBtn) {
                    const id = editBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("EditModal", "Personeller")?id=${id}`, "Personel Düzenle");
                    return;
                }

                const passBtn = e.target.closest(".btn-personel-pass");
                if (passBtn) {
                    const id = passBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("SetPasswordModal", "Personeller")?id=${id}`, "Şifre Değiştir");
                    return;
                }
            });
        })();
    </script>
}
