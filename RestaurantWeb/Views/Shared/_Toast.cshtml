@{
    var success = TempData["Success"] as string;
    var error = TempData["Error"] as string;
    var info = TempData["Info"] as string;

    // aynı anda birden fazla mesaj varsa öncelik: Error > Success > Info
    var type = !string.IsNullOrWhiteSpace(error) ? "danger"
             : !string.IsNullOrWhiteSpace(success) ? "success"
             : !string.IsNullOrWhiteSpace(info) ? "info"
             : null;

    var message = !string.IsNullOrWhiteSpace(error) ? error
                : !string.IsNullOrWhiteSpace(success) ? success
                : !string.IsNullOrWhiteSpace(info) ? info
                : null;
}

@if (!string.IsNullOrWhiteSpace(message) && type != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
        <div class="toast show align-items-center text-bg-@type border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
