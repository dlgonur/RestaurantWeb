@model List<RestaurantWeb.Models.Masa>
@using System.Linq

<h2>Masalar</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Masa</a>
</p>

<div class="mb-3 d-flex gap-0">
    <a class="btn btn-outline-secondary" asp-action="Board">Sipariş Oluştur</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Masa No</th>
            <th>Kapasite</th>
            <th>Aktif</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    Henüz masa kaydı bulunmuyor.
                </td>
            </tr>
        }
        else
        {
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.MasaNo</td>
                    <td>@m.Kapasite</td>
                    <td class="masa-aktif-text">@(m.AktifMi ? "Evet" : "Hayır")</td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning btn-masa-edit"
                                data-id="@m.Id"
                                data-masano="@m.MasaNo">
                            Düzenle
                        </button>

                        <form asp-action="Toggle"
                              method="post"
                              style="display:inline"
                              class="masa-toggle-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@m.Id" />
                            <button type="submit" class="btn btn-sm btn-secondary masa-toggle-btn">
                                @(m.AktifMi ? "Pasif Yap" : "Aktif Yap")
                            </button>
                        </form>

                        <button type="button"
                                class="btn btn-sm btn-danger btn-masa-delete"
                                data-id="@m.Id"
                                data-masano="@m.MasaNo">
                            Sil
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="masaModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="masaModalTitle">İşlem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="masaModalBody">
                <div class="text-muted">Yükleniyor...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const modalEl = document.getElementById("masaModal");
            const modalBody = document.getElementById("masaModalBody");
            const modalTitle = document.getElementById("masaModalTitle");
            const bsModal = new bootstrap.Modal(modalEl);

            async function loadPartial(url, titleText) {
                modalTitle.textContent = titleText || "İşlem";
                modalBody.innerHTML = '<div class="text-muted">Yükleniyor...</div>';
                bsModal.show();

                const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
                const html = await res.text();

                if (!res.ok) {
                    modalBody.innerHTML = `<div class="alert alert-danger">${html}</div>`;
                    return;
                }

                modalBody.innerHTML = html;
                wireForms();
            }

            function wireForms() {
                const editForm = document.getElementById("masaEditForm");
                if (editForm && editForm.dataset.bound !== "1") {
                    editForm.dataset.bound = "1";
                    editForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("masaEditError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(editForm);
                        const res = await fetch(editForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) window.location.reload();
                    });
                }

                const deleteForm = document.getElementById("masaDeleteForm");
                if (deleteForm && deleteForm.dataset.bound !== "1") {
                    deleteForm.dataset.bound = "1";
                    deleteForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("masaDeleteError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(deleteForm);
                        const res = await fetch(deleteForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) window.location.reload();
                    });
                }
            }

            // ★ Toggle (AJAX) - sayfa yenilemeden
            document.addEventListener("submit", async function (e) {
                const form = e.target.closest(".masa-toggle-form");
                if (!form) return;

                e.preventDefault();

                const row = form.closest("tr");
                const aktifCell = row?.querySelector(".masa-aktif-text");
                const btn = form.querySelector(".masa-toggle-btn");

                const formData = new FormData(form);

                const res = await fetch(form.action, {
                    method: "POST",
                    body: formData,
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });

                if (!res.ok) {
                    const text = await res.text();
                    alert(text);
                    return;
                }

                const json = await res.json();
                if (!json || !json.success) {
                    alert(json?.message || "İşlem başarısız.");
                    return;
                }

                const newAktif = !!json.aktifMi;

                if (aktifCell) aktifCell.textContent = newAktif ? "Evet" : "Hayır";
                if (btn) btn.textContent = newAktif ? "Pasif Yap" : "Aktif Yap";
            });

            document.addEventListener("click", function (e) {
                const editBtn = e.target.closest(".btn-masa-edit");
                if (editBtn) {
                    const id = editBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("EditModal", "Masalar")?id=${id}`, "Masa Düzenle");
                    return;
                }

                const delBtn = e.target.closest(".btn-masa-delete");
                if (delBtn) {
                    const id = delBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("DeleteModal", "Masalar")?id=${id}`, "Masa Sil");
                    return;
                }
            });
        })();
    </script>
}
