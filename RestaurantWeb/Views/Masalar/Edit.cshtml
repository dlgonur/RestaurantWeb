@model RestaurantWeb.Models.ViewModels.MasaEditVm

<h2>Masa Güncelle</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="MasaNo" class="form-label">Masa No</label>
        <input asp-for="MasaNo" class="form-control" type="number" min="1" />
        <span asp-validation-for="MasaNo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Kapasite" class="form-label">Kapasite</label>
        <input asp-for="Kapasite" class="form-control" type="number" min="1" />
        <span asp-validation-for="Kapasite" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Aktif Durum</label>
        <input class="form-control" value="@(Model.AktifMi ? "Aktif" : "Pasif")" disabled />
        <div class="form-text">
            Aktif/Pasif durumunu listeden "Aktif Yap / Pasif Yap" ile değiştirebilirsiniz.
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
