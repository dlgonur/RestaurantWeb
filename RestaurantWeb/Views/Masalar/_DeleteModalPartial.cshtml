@model RestaurantWeb.Models.Masa

<form id="masaDeleteForm" asp-action="DeleteModalConfirmed" asp-controller="Masalar" method="post">
    @Html.AntiForgeryToken()

    <div id="masaDeleteError" class="alert alert-danger d-none"></div>

    <input type="hidden" name="id" value="@Model.Id" />

    <div class="alert alert-warning">
        <strong>Masa @Model.MasaNo</strong> kaydını silmek istediğinize emin misiniz?
        <div class="small text-muted mt-1">
            Kapasite: @Model.Kapasite • Durum: @Model.Durum • Aktif: @(Model.AktifMi ? "Evet" : "Hayır")
        </div>
    </div>

    <div class="alert alert-danger">
        Bu işlem geri alınamaz.
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Vazgeç</button>
        <button type="submit" class="btn btn-danger">Evet, Sil</button>
    </div>
</form>
