@model RestaurantWeb.Models.Masa

<h2>Masa Sil</h2>

<div class="alert alert-warning">
    <div><strong>Masa No:</strong> @Model.MasaNo</div>
    <div><strong>Kapasite:</strong> @Model.Kapasite</div>
    <div><strong>Durum:</strong> @(Model.AktifMi ? "Aktif" : "Pasif")</div>
</div>

<div class="alert alert-danger">
    Bu masayı silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
