@model List<RestaurantWeb.Models.Urun>
@using System.Linq

<h2>Ürünler</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Yeni Ürün</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Resim</th>
            <th>Ad</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Aktif</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    Henüz ürün kaydı bulunmuyor.
                </td>
            </tr>
        }
        else
        {
            @foreach (var u in Model)
            {
                <tr>
                    <td style="width:90px;">
                        <img src="@Url.Action("Resim", "Urunler", new { id = u.Id })?v=@DateTime.Now.Ticks"
                             alt="Ürün resmi"
                             style="width:70px; height:70px; object-fit:cover; border-radius:8px; border:1px solid #ddd;"
                             onerror="this.style.display='none';" />
                    </td>

                    <td>@u.Ad</td>
                    <td>@u.KategoriAd</td>
                    <td>@u.Fiyat.ToString("0.00")</td>
                    <td>@u.Stok</td>

                    <td class="urun-aktif-text">@(u.AktifMi ? "Evet" : "Hayır")</td>

                    <td>
                        <button type="button"
                                class="btn btn-sm btn-warning btn-urun-edit"
                                data-id="@u.Id"
                                data-name="@u.Ad">
                            Düzenle
                        </button>

                        <form asp-action="ToggleAktif"
                              method="post"
                              style="display:inline"
                              class="urun-toggle-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@u.Id" />
                            <button type="submit" class="btn btn-sm btn-secondary urun-toggle-btn">
                                @(u.AktifMi ? "Pasif Yap" : "Aktif Yap")
                            </button>
                        </form>

                        <button type="button"
                                class="btn btn-sm btn-danger btn-urun-delete"
                                data-id="@u.Id"
                                data-name="@u.Ad">
                            Sil
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="modal fade" id="urunModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="urunModalTitle">İşlem</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body" id="urunModalBody">
                <div class="text-muted">Yükleniyor...</div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const modalEl = document.getElementById("urunModal");
            const modalBody = document.getElementById("urunModalBody");
            const modalTitle = document.getElementById("urunModalTitle");
            const bsModal = new bootstrap.Modal(modalEl);

            async function loadPartial(url, titleText) {
                modalTitle.textContent = titleText || "İşlem";
                modalBody.innerHTML = '<div class="text-muted">Yükleniyor...</div>';
                bsModal.show();

                const res = await fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } });
                const html = await res.text();

                if (!res.ok) {
                    modalBody.innerHTML = `<div class="alert alert-danger">${html}</div>`;
                    return;
                }

                modalBody.innerHTML = html;
                wireForms();
            }

            function wireForms() {
                const editForm = document.getElementById("urunEditForm");
                if (editForm && editForm.dataset.bound !== "1") {
                    editForm.dataset.bound = "1";
                    editForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("urunEditError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(editForm);
                        const res = await fetch(editForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) {
                            window.location.reload();
                        }
                    });
                }

                const deleteForm = document.getElementById("urunDeleteForm");
                if (deleteForm && deleteForm.dataset.bound !== "1") {
                    deleteForm.dataset.bound = "1";
                    deleteForm.addEventListener("submit", async function (e) {
                        e.preventDefault();

                        const err = document.getElementById("urunDeleteError");
                        if (err) { err.classList.add("d-none"); err.textContent = ""; }

                        const formData = new FormData(deleteForm);
                        const res = await fetch(deleteForm.action, { method: "POST", body: formData });

                        if (!res.ok) {
                            const text = await res.text();
                            if (err) { err.textContent = text; err.classList.remove("d-none"); }
                            return;
                        }

                        const json = await res.json();
                        if (json && json.success) {
                            window.location.reload();
                        }
                    });
                }
            }

            // Modal open handlers
            document.addEventListener("click", function (e) {
                const editBtn = e.target.closest(".btn-urun-edit");
                if (editBtn) {
                    const id = editBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("EditModal", "Urunler")?id=${id}`, "Ürün Düzenle");
                    return;
                }

                const delBtn = e.target.closest(".btn-urun-delete");
                if (delBtn) {
                    const id = delBtn.getAttribute("data-id");
                    loadPartial(`@Url.Action("DeleteModal", "Urunler")?id=${id}`, "Ürün Sil");
                    return;
                }
            });

            // Toggle Aktif (AJAX) - sayfa yenilemeden
            document.addEventListener("submit", async function (e) {
                const form = e.target.closest(".urun-toggle-form");
                if (!form) return;

                e.preventDefault();

                const row = form.closest("tr");
                const aktifCell = row?.querySelector(".urun-aktif-text");
                const btn = form.querySelector(".urun-toggle-btn");

                const formData = new FormData(form);

                const res = await fetch(form.action, {
                    method: "POST",
                    body: formData,
                    headers: { "X-Requested-With": "XMLHttpRequest" }
                });

                if (!res.ok) {
                    const text = await res.text();
                    alert(text);
                    return;
                }

                const json = await res.json();
                if (!json || !json.success) {
                    alert(json?.message || "İşlem başarısız.");
                    return;
                }

                // DOM flip
                const isAktif = (aktifCell?.textContent || "").trim() === "Evet";
                const newAktif = !isAktif;

                if (aktifCell) aktifCell.textContent = newAktif ? "Evet" : "Hayır";
                if (btn) btn.textContent = newAktif ? "Pasif Yap" : "Aktif Yap";
            });

        })();
    </script>
}
