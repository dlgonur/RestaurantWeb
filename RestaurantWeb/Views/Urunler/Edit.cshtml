@model RestaurantWeb.Models.ViewModels.UrunEditVm
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Ürün Güncelle</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="KategoriId" class="form-label">Kategori</label>
        <select asp-for="KategoriId"
                class="form-select"
                asp-items="(List<SelectListItem>)ViewBag.Kategoriler">
        </select>
        <span asp-validation-for="KategoriId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Ürün Adı</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label">Fiyat</label>
        <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stok" class="form-label">Stok</label>
        <input asp-for="Stok" class="form-control" type="number" step="1" min="0" />
        <span asp-validation-for="Stok" class="text-danger"></span>
    </div>

    @if (Model.ResimVar)
    {
        <div class="mb-3 form-check">
            <input asp-for="ResmiKaldir" class="form-check-input" type="checkbox" />
            <label asp-for="ResmiKaldir" class="form-check-label">Mevcut görseli kaldır</label>
            <div class="form-text">
                Bu seçenek işaretlenirse ürünün kayıtlı görseli silinir.
            </div>
        </div>
    }
    else
    {
        <div class="mb-3">
            <div class="text-muted">Bu üründe kayıtlı görsel yok.</div>
        </div>
    }

    <div class="mb-3">
        <label asp-for="Resim" class="form-label">Yeni Resim (Opsiyonel)</label>
        <input asp-for="Resim" class="form-control" type="file" accept="image/*" />
        <div class="form-text">Seçmezsen mevcut resim korunur. Maksimum 5 MB.</div>
        <span asp-validation-for="Resim" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
