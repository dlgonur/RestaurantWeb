@model RestaurantWeb.Models.ViewModels.UrunCreateVm
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Yeni Ürün</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="KategoriId" class="form-label">Kategori</label>
        <select asp-for="KategoriId"
                class="form-select"
                asp-items="(List<SelectListItem>)ViewBag.Kategoriler">
        </select>
        <span asp-validation-for="KategoriId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Ad" class="form-label">Ürün Adı</label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fiyat" class="form-label">Fiyat</label>
        <input asp-for="Fiyat" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="Fiyat" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stok" class="form-label">Stok</label>
        <input asp-for="Stok" class="form-control" type="number" step="1" min="0" />
        <div class="form-text">Boş bırakılırsa 0 kabul edilir.</div>
        <span asp-validation-for="Stok" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Resim" class="form-label">Ürün Resmi (Opsiyonel)</label>
        <input asp-for="Resim" class="form-control" type="file" accept="image/*" />
        <div class="form-text">Maksimum 5 MB. Sadece resim dosyaları.</div>
        <span asp-validation-for="Resim" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
